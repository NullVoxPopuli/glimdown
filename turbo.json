{
  "baseBranch": "origin/main",
  "pipeline": {
    /////////////////////////////////////////////////
    /////////////////////////////////////////////////
    //
    //         Local Dev
    //
    /////////////////////////////////////////////////
    /////////////////////////////////////////////////
    "dev": {
      "dependsOn": ["^dev"],
      "cache": false
    },

    /////////////////////////////////////////////////
    /////////////////////////////////////////////////
    //
    //         C.I. / C.D.
    //
    /////////////////////////////////////////////////
    /////////////////////////////////////////////////
    "build": {
      "outputs": ["dist/**"],
      "dependsOn": ["^build"]
    },
    "test": {
      "outputs": [],
      "dependsOn": ["^build"]
    },

    /////////////////////////////////////////////////
    /////////////////////////////////////////////////
    //
    //         Quality Checks
    //
    /////////////////////////////////////////////////
    /////////////////////////////////////////////////
    "lint": {
      "outputs": [],
      "dependsOn": ["lint:js", "lint:hbs", "lint:prettier", "lint:types"]
    },
    "lint:js": {
      "outputs": []
    },
    "lint:hbs": {
      "outputs": []
    },
    "lint:prettier": {
      "outputs": []
    },
    "lint:types": {
      "outputs": [],
      "dependsOn": ["^build"]
    },
    "lint:fix": {
      "outputs": [],
      "dependsOn": ["lint:js:fix", "lint:hbs:fix", "lint:prettier:fix"]
    },
    "lint:js:fix": {
      "outputs": []
    },
    "lint:hbs:fix": {
      "outputs": []
    },
    "lint:prettier:fix": {
      "outputs": []
    }
  }
}
